{
  "name": "@kakiage/client",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wireit",
    "watch": "wireit",
    "build": "wireit"
  },
  "dependencies": {
    "@kakiage/server": "workspace:*",
    "@tanstack/react-query": "^5.84.2",
    "@tanstack/react-router": "^1.130.2",
    "@tanstack/react-router-devtools": "^1.131.5",
    "dompurify": "^3.2.6",
    "marked": "^16.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@rsbuild/core": "^1.4.15",
    "@rsbuild/plugin-react": "^1.3.5",
    "@tanstack/router-plugin": "^1.121.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@unocss/postcss": "^66.4.2",
    "@unocss/preset-wind3": "^66.4.2",
    "typescript": "^5.7.2",
    "unocss": "^66.4.2",
    "vite": "^7.1.2",
    "wireit": "^0.14.12"
  },
  "wireit": {
    "build": {
      "command": "rsbuild build && tsc --noEmit",
      "files": [
        "src/**",
        "index.html",
        "uno.config.ts",
        "tsconfig.json",
        "rsbuild.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    },
    "watch": {
      "command": "rsbuild build --watch",
      "service": true,
      "files": [
        "src/**"
      ]
    },
    "dev": {
      "command": "rsbuild dev --port 3000",
      "service": true
    }
  }
}
