{
  "name": "@kakiage/client",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wireit",
    "watch": "wireit",
    "build": "wireit",
    "format": "wireit",
    "lint": "wireit"
  },
  "dependencies": {
    "@kakiage/server": "workspace:*",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-router": "^1.133.21",
    "@tanstack/react-router-devtools": "^1.133.21",
    "dompurify": "^3.3.0",
    "marked": "^16.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@rsbuild/core": "^1.5.17",
    "@rsbuild/plugin-react": "^1.4.1",
    "@tanstack/router-plugin": "^1.133.21",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@unocss/postcss": "^66.5.4",
    "@unocss/preset-wind3": "^66.5.4",
    "typescript": "^5.9.3",
    "unocss": "^66.5.4",
    "vite": "^7.1.11",
    "wireit": "^0.14.12"
  },
  "wireit": {
    "build": {
      "command": "rsbuild build && tsc --noEmit",
      "files": [
        "src",
        "index.html",
        "uno.config.ts",
        "tsconfig.json",
        "rsbuild.config.ts"
      ],
      "output": [
        "dist"
      ],
      "dependencies": [
        "../server:build:rpc"
      ]
    },
    "watch": {
      "command": "rsbuild build --watch",
      "service": {
        "readyWhen": {
          "lineMatches": ".*ready.*built in.*"
        }
      },
      "files": [
        "src",
        "index.html",
        "uno.config.ts",
        "tsconfig.json",
        "rsbuild.config.ts"
      ],
      "dependencies": [
        "../server:watch:rpc"
      ]
    },
    "dev": {
      "command": "rsbuild dev --port 3000",
      "service": true
    },
    "format": {
      "command": "biome format --write"
    },
    "lint": {
      "command": "biome lint --write"
    }
  }
}
