{
  "name": "@kakiage/server",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "db:migrate": "drizzle-kit generate --dialect sqlite --out migrations --schema src/db/schema.ts",
    "db:apply": "wrangler d1 migrations apply kakiage-db",
    "db:init": "wrangler d1 execute kakiage-db --file initialize.sql"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "hono": "^4.8.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250805.0",
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.27.0"
  }
}
