{
  "name": "@kakiage/server",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate": "drizzle-kit generate --dialect sqlite --out migrations --schema src/db/schema.ts",
    "db:apply": "wrangler d1 migrations apply kakiage-db"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "hono": "^4.8.12"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.27.0"
  }
}
