{
  "name": "@kakiage/server",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "wireit",
    "deploy": "wireit",
    "build:rpc": "wireit",
    "watch:rpc": "wireit",
    "db:migrate": "wireit",
    "db:apply": "wireit"
  },
  "exports": {
    "./rpc": {
      "import": "./dist/rpc.js",
      "types": "./dist/rpc.d.ts"
    }
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "hono": "^4.8.12",
    "marked": "^16.1.2",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250805.0",
    "drizzle-kit": "^0.31.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "wireit": "^0.14.12",
    "wrangler": "^4.27.0"
  },
  "wireit": {
    "build:rpc": {
      "command": "tsup ./src/rpc.ts --dts --format esm",
      "files": [
        "src/**"
      ],
      "output": [
        "dist/**"
      ]
    },
    "watch:rpc": {
      "command": "tsup ./src/rpc.ts --watch --dts --format esm",
      "service": {
        "readyWhen": {
          "lineMatches": ".*DTS.*Build success in \\d+.*"
        }
      },
      "files": [
        "src/**"
      ]
    },
    "dev": {
      "command": "wrangler dev",
      "service": true,
      "dependencies": [
        "watch:rpc",
        "../client:watch"
      ],
      "files": [
        "../client/dist/**",
        "src/**",
        "wrangler.jsonc"
      ]
    },
    "deploy": {
      "command": "wrangler deploy --minify",
      "files": [
        "dist/**",
        "wrangler.jsonc"
      ],
      "dependencies": [
        "../../:build"
      ]
    },
    "db:migrate": {
      "command": "drizzle-kit generate --dialect sqlite --out migrations --schema src/db/schema.ts"
    },
    "db:apply": {
      "command": "wrangler d1 migrations apply kakiage-db"
    }
  }
}
