{
  "name": "@kakiage/processor",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "wireit"
  },
  "dependencies": {
    "rehype-code-titles": "^1.2.0",
    "rehype-prism-plus": "^2.0.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "wireit": "^0.14.12"
  },
  "wireit": {
    "build": {
      "command": "tsup ./src/index.ts --dts --format cjs,esm",
      "files": [
        "src"
      ],
      "output": [
        "dist"
      ]
    }
  }
}
